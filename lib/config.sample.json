{
    "project": {
        "title":        "My Project",
        "description":  "Enter something useful here",
        "version":      "0.1",
        "locale":       "ru_RU.UTF-8",
        "postsppage":   "20"
    },
    "db": {
        "lib_path": "/lib/DbSimple",
        "host": "127.0.0.1",
        "user": "root",
        "password": "",
        "database": "tyampuru",
        "table_prefix": "tyampu__"
    },
    "image": {
        "width": 800,
        "thumb_width": 200,
        "thumb_height": 120
    },
    "templates": {
        "path": "/templates/default"
    },
    "routes": [
        {
            "path": "\\/404",
            "controller": "error",
            "action": "error404",
            "header": "HTTP/1.0 404 Not Found"
        },{
            "path": "\\/",
            "controller": "chapter",
            "action": "all"
        },{
            "path": "\\/page\\/(\\d+)",
            "controller": "chapter",
            "action": "all",
            "params": ["page"]
        },{
            "path": "\\/chapter\\/([A-Za-z_-]{2,})",
            "controller": "chapter",
            "action": "byName",
            "params": ["name"]
        },{
            "path": "\\/chapter\\/([A-Za-z_-]{2,})\\/page\\/(\\d+)",
            "controller": "chapter",
            "action": "byName",
            "params": ["name","page"]
        },{
            "path": "\\/post\\/(\\d+)\\/?(.+)?",
            "controller": "post",
            "action": "byId",
            "params": ["id","name"]
        },{
            "path": "\\/search\\/(.{3,255})",
            "controller": "search",
            "action": "search",
            "params": ["query"]
        },{
            "path": "\\/tag\\/(.{3,255})",
            "controller": "search",
            "action": "searchByTag",
            "params": ["query"]
        },{
            "path": "\\/rss",
            "controller": "rss",
            "action": "rss",
            "header": "Content-type: application/xhtml+xml; charset=UTF-8"
        }
    ]
}